<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.teacher.assignment">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".login"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".add_message"
            android:label="@string/title_activity_add_message"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view_message"
            android:label="@string/title_activity_view_message"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".edit_message"
            android:label="@string/title_activity_edit_message"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>